<resources>
    <!-- Base application theme. -->
    <style name="Theme.DemoViews" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/main_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/main_200</item>
        <item name="colorSecondaryVariant">@color/main_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorSecondary">@color/main_800</item>
        <item name="android:statusBarColor">@color/main_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_very_small</item>
        <item name="android:minHeight">0dp</item>
    </style>


    <style name="Toolbar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
    </style>
</resources>